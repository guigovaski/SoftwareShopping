@page
@* @model IdentityServer.Pages.Account.Register.Index *@
@model IdentityServer.Pages.Account.Register.InputModel

@{
    Layout = null;
}

<div class="login-page">
    <div class="lead">
        <h1>Register</h1>
        <p>Choose how to register</p>
    </div>
     
    <partial name="_ValidationSummary" />

    <div class="row">

        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Local Account Register</h2>
                </div>

                <div class="card-body">
                    <form asp-route="Login">
                        <input type="hidden" asp-for="@Model.ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="@Model.UserName"></label>
                            <input class="form-control" placeholder="Username" asp-for="@Model.UserName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Email"></label>
                            <input class="form-control" placeholder="email" asp-for="@Model.Email" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.FirstName"></label>
                            <input class="form-control" placeholder="first name" asp-for="@Model.FirstName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.LastName"></label>
                            <input class="form-control" placeholder="lastname" asp-for="@Model.LastName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Password"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="@Model.Password" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.RoleName"></label>
                            <select asp-for="@Model.RoleName" class="form-control" asp-items="@(new SelectList(ViewBag.message))"></select>
                        </div>
                        <button class="btn btn-primary" name="button" value="Register">Register</button>
                        <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
                    </form>
                </div>
                <div class="card-footer">
                    <a href="@Url.Page("login", new { Model.ReturnUrl })">Login</a>
                </div>
            </div>
        </div>


    </div>
</div>