@model SoftwareShopping.Web.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="DeletePost">
    <input asp-for="ProductId" hidden/>
    <div class="row">
        <div class="col-2">
            <a asp-controller="Product" asp-action="Index" class="btn btn-info">Cancelar</a>
        </div>
        <div class="col-2">
            <input type="submit" class="btn btn-danger" value="Deletar" />
        </div>
    </div>
</form>

